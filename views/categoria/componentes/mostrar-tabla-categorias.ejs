<table class="table"> <!-- table -->
    <thead> <!-- thead -->
    <tr> <!-- table row -->
        <th scope="col"> <!-- table header -->
            ID
        </th>
        <th scope="col">Nombre</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Acciones</th>
    </tr>
    </thead>

    <%if (categorias){%>
    <tbody>
    <% categorias.forEach( (categoria) => {%>
        <tr> <!-- table row -->
            <th scope="row">
                <%= categoria.id%>
            </th> <!-- table header -->
            <td>
                <%= categoria.nombre%>
            </td> <!-- table detail -->
            <td>
                <%= categoria.descripcion%>
            </td> <!-- table detail -->
            <td>
                <a href="categoria/<%= categoria.id %>">
                    <button type="button"
                            class="btn btn-info">
                        Editar
                    </button>
                </a>
            </td> <!-- table detail -->
            <td>
                <form action="/categoria/eliminar/<%= categoria.id %>"
                      method="post"
                >
                    <button type="submit"
                            class="btn btn-danger">
                        Eliminar
                    </button>
                </form>
            </td> <!-- table detail -->
        </tr>
    <%}); %>
    </tbody> <!-- tbody -->
    <%}%>
</table>
